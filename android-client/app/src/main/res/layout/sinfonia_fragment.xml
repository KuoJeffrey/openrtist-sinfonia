<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="fragment"
            type="edu.cmu.cs.sinfonia.SinfoniaFragment" />

        <variable
            name="tier1url"
            type="String" />

        <variable
            name="uuid"
            type="String" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sinfonia_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/find_cloudlet_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginTop="32dp"
                            android:text="@string/find_cloudlet_title"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/deployment_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:nextFocusDown="@id/tier_one_url_layout"
                            android:nextFocusForward="@id/tier_one_url_layout"
                            android:text="@string/launch_text"
                            android:theme="@style/MyGabrielMaterialTheme"
                            app:layout_constraintBaseline_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tier_one_url_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:hint="@string/cloud_url"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/deployment_button">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tier_one_url_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:inputType="textNoSuggestions|textVisiblePassword"
                                android:nextFocusDown="@id/uuid_label"
                                android:nextFocusForward="@id/uuid_label"
                                android:text="@={tier1url}"
                                tools:text="https://cmu.findcloudlet.org" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/uuid_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:labelFor="@+id/uuid_text"
                            android:text="@string/uuid_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tier_one_url_layout" />

                        <TextView
                            android:id="@+id/uuid_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:contentDescription="@string/uuid_label"
                            android:nextFocusUp="@id/tier_one_url_layout"
                            android:text="@{uuid}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/uuid_label"
                            tools:text="737b5001-d27a-413f-9806-abf9bfce6746" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

<!--                <LinearLayout-->
<!--                    android:id="@+id/detail_layout"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="8dp"-->
<!--                    android:divider="@null"-->
<!--                    android:orientation="vertical"-->
<!--                    app:items="@{sinfonia.deployments}"-->
<!--                    app:layout="@layout/sinfonia_detail"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/sinfonia_card"-->
<!--                    tools:ignore="UselessLeaf" />-->

            </LinearLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>